<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Plotter</title>
		<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    	<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	<link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
	<script type="text/javascript" src="/js/dygraph-combined.js"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
	<script type="text/javascript" src="/js/plot.js"></script>
	</head>
	<body>
		<header>
			<h1>Plotter</h1>
		</header>
		<section>
			<article>
				<form id="parameters">
					<div>
						<label for="function">Function</label>
						<input id="function" type="text" placeholder="Put the function here" autofocus required/>
					</div>
					<div>
						<div>
							<label for="min">Domain</label>
							<input id="min" type="number" step="1" value="-5" required/>
						</div>
						<div>
							<label for="max">to</label>
							<input id="max" type="number" step="1" value="5" required/>
						</div>
					</div>
					<div>
						<label for="precision">Precision</label>
						<input id="precision" type="number" step="0.01" value="0.1" min="0.01" required/>
					</div>
					<button onclick="Plot.plot()">Plot!</button>
				</form>
			</article>
			<article id="graphic">
			</article>
		</section>
	</body>
</html>